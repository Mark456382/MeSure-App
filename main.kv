<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"

<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True

MDScreen:
    MDNavigationLayout:
        MDScreenManager:
            id: main_screen
            MDScreen:
                MDTopAppBar:
                    title: "MeSure MVP"
                    elevation: 4
                    pos_hint: {"top": 1}
                    md_bg_color: "#18a7b5"
                    specific_text_color: "#4a4939"
                    left_action_items: [["menu", lambda x: navigate_main_menu.set_state("open")]]
            

        MDNavigationDrawer:
            id: navigate_main_menu
            radius: (0, 16, 16, 0)
            MDNavigationDrawerMenu:
                MDNavigationDrawerHeader:
                    title: "MeSure MVP"
                    title_color: "#4a4939"
                    text: "v0.1.0-alpha"
                    source: "icon.png"
                    spacing: "10dp"
                    padding: "15dp", 0, 0, "56dp"

                MDNavigationDrawerDivider:

                DrawerClickableItem:
                    icon: "bookmark"
                    text: "Main"

                DrawerClickableItem:
                    icon: "saw-blade"
                    text: "Settings"
